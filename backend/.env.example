# Database settings
DATABASE_URL="sqlite:///./vesta.db"
DATABASE_ECHO="false"

# API settings
API_TITLE="Vesta API"
API_DESCRIPTION="A FastAPI application for the Vesta project"
API_VERSION="1.0.0"

# Security settings
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Environment
ENVIRONMENT="development"
DEBUG="true"
